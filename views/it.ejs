<%- include('layout/header')%>

<section>
    <div class>
        <h2 class="page-title">Work On The Project And Collaborate</h2>

        <!-- Table displaying projects -->
        <table>
            <thead>
                <tr>
                    <th>Project Title</th>
                    <th>Action</th>
                    <th>Access Link</th>

                </tr>
            </thead>
            <tbody>
                <% if (projects.length > 0) { %>
                    <% projects.forEach(project => { %>
                        <tr>
                            <td><%= project.project.title %></td>
                            <td>
                                <!-- Button to view the project details -->
                                <button class="header-buttons" onclick="window.location.href='/projects/<%= project._id %>'">View Details</button>
                            </td>
                            <td>
                                <!-- Button to access the Google Drive link -->
                                <button class="header-buttons" onclick="window.location.href='<%= project.driveLink %>'">Access</button>

                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5">No projects available.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</section>

